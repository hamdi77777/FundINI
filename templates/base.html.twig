    {% if is_granted('ROLE_USER') %}
    <!-- Mercure script -->
    <script>
        const url = new URL('http://localhost:3000/.well-known/mercure');
        url.searchParams.append('topic', 'http://monsite.com/notif/{{ user.id }}');
        const eventSource = new EventSource(url)
        eventSource.onmessage = e => {
            var mydata = JSON.parse(e.data)
            Toast.show(mydata.sender+' a versé '+ mydata.montant+'Dt '+'au projet '+mydata.project,'success')
        }
    </script>
    <script type="text/javascript" src="{{ asset('toast/toast.js') }}"></script>
    {% endif %}

