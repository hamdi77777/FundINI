	<!-- Special Cuase Paralax -->
	<div class="special-cause">
		<div class="container">
		{% for post in posts|reverse|slice(0,1) %}
		
			<div class="row">
				<div class="col-md-6 col-xs-12 donet__area_img">
				<a href="{{ path ('post_show_donation',{'id':post.id})}}">			
					<img src="{{ asset ('uploads/files/' ~post.thumbnail)}}" style="width:570px; height:400px; " alt="" /> 
				</div>
				<div class="col-md-6 col-xs-12 donet__area">			
					<div class="section-name parallax one">
						<h1>CAUSE SPÉCIALE MAINTENANT</h1>
						
						<h2>{{post.title}} </h2>
						<h4> {{post.content}}</h4>
					</div>
					
					<div class="foundings">
						<div class="progress-bar-wrapper big">
							<div class="progress-bar-outer">
								<div class="clearfix">
									<span class="value one">Rised: {{post.amount}}DT</span>
									<span class="value two">- To go: {{post.fundingGoal}}DT</span>
								</div>
								<div class="progress-bar-inner">
									<div class="progress-bar">
										<span data-percent="{{ ((post.amount / post.fundingGoal)*100)|round }}"> <span class="pretng">{{ ((post.amount / post.fundingGoal)*100)|round }}%</span> </span>
									</div>	
								</div>
							</div>
						</div>
					</div>
					
					<div class="btns-wrapper">
						<a href="{{ path ('post_show_donation',{'id':post.id})}}" class="btn btn-big btn-solid "><i class="fa fa-archive"></i><span>Financer Maintenant</span></a>
					</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
	
